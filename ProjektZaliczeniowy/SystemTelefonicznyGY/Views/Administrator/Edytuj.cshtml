@using System.Data
@model SystemTelefonicznyGY.Models.Pracownik

<!--
Przejrzystość: Formularz jest symetryczny i czytelny, co poprawia komfort pracy administratora.
Bezpieczeństwo danych: Skrypt JS uniemożliwia pomyłkowe przypisanie informatyka do stanowiska magazynera.
Wydajność: Filtrowanie odbywa się po stronie przeglądarki (klienta), więc nie obciąża serwera dodatkowymi zapytaniami przy każdej zmianie pola działu.
--->
<script>
    function filtrujStanowiska() {
        var wybranyDzial = document.getElementById("selectDzial").value;
        var selectStanowisko = document.getElementById("selectStanowisko");
        var opcje = selectStanowisko.options;

        var pierwszeDostepne = null;

        for (var i = 0; i < opcje.length; i++) {
            var dzialStanowiska = opcje[i].getAttribute("data-dzial");

            if (dzialStanowiska == wybranyDzial) {
                opcje[i].style.display = "block";
                if (!pierwszeDostepne) pierwszeDostepne = opcje[i].value;
            } else {
                opcje[i].style.display = "none";
            }
        }

        // Funkcja do resetowania hasła (wpisuje Welcome123 do pola)
        function zresetujHaslo() {
            var pole = document.getElementById("poleHaslo");
            pole.value = "Welcome123";
            // Opcjonalnie: podświetl pole na żółto, żeby zwrócić uwagę
            pole.style.backgroundColor = "#fff3cd";
        }

        // Automatycznie ustawia pierwsze pasujące stanowisko po zmianie działu
        if (pierwszeDostepne) {
            selectStanowisko.value = pierwszeDostepne;
        }
    }

    // Uruchomienie filtrowania przy starcie strony, aby dopasować stan początkowy
    window.onload = filtrujStanowiska;
</script>




<div class="card-body">
    @using (Html.BeginForm("Zapisz", "Administrator", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Imię</label>
                <input type="text" name="Imie" value="@Model.Imie" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label class="form-label">Nazwisko</label>
                <input type="text" name="Nazwisko" value="@Model.Nazwisko" class="form-control" required />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Email (Login)</label>
                <input type="text" name="Login" value="@Model.Login" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label">Rola</label>
                <select name="Rola" class="form-select">
                    <option value="User" @(Model.Rola == "User" ? "selected" : "")>Użytkownik (User)</option>
                    <option value="Admin" @(Model.Rola == "Admin" ? "selected" : "")>Administrator (Admin)</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Dział</label>
                <select id="selectDzial" name="IdDzialu" class="form-select" onchange="filtrujStanowiska()">
                    @foreach (System.Data.DataRow dzial in (ViewBag.ListaDzialow as System.Data.DataTable).Rows)
                    {
                        <option value="@dzial["ID"]" @(Convert.ToInt32(dzial["ID"]) == Model.IdDzialu ? "selected" : "")>
                            @dzial["NazwaDzialu"]
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Stanowisko</label>
                <select id="selectStanowisko" name="IdStanowiska" class="form-select">
                    @foreach (System.Data.DataRow st in (ViewBag.ListaStanowiska as System.Data.DataTable).Rows)
                    {
                        <option value="@st["ID"]"
                                data-dzial="@st["ID_Dzialu"]"
                                @(Convert.ToInt32(st["ID"]) == Model.IdStanowiska ? "selected" : "")>
                            @st["NazwaStanowiska"]
                        </option>
                    }
                </select>
            </div>
        </div>
        <hr />

        <div class="row mb-3 align-items-end">
            <div class="col-md-6">
                <label class="form-label">Hasło</label>
                <input type="text" id="poleHaslo" name="Haslo" class="form-control" placeholder="@(Model.Id == 0 ? "Domyślnie: Welcome123" : "Zostaw puste, aby nie zmieniać")" />
                <small class="text-muted">
                    @(Model.Id == 0 ? "Dla nowego pracownika domyślne hasło to Welcome123." : "Jeśli zostawisz to pole puste, obecne hasło pracownika pozostanie bez zmian.")
                </small>
            </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-warning" onclick="zresetujHaslo()">
                    <i class="fas fa-key"></i> Zresetuj hasło do "Welcome123"
                </button>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">Zapisz Zmiany</button>
            <a href="@Url.Action("Pracownicy")" class="btn btn-secondary">Anuluj</a>
        </div>
    }
</div>
