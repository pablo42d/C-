    @*<p class="lead">Dane bilingowe wyświetlane są za miesiąc: <strong>@ViewBag.MiesiacBilingowy</strong>.</p>*@

    <div class="row" style="margin-top:20px;">
        <div class="col-md-4">
            <div class="alert alert-info">
                <h4>Suma wszystkich kosztów za połączenia (Komórkowe)</h4>
                @*@if (Model.SumaKomorkowe > 0)
                    {
                        <p style="font-size: 24px;"><strong>@Model.SumaKomorkowe.ToString("0.00") zł</strong></p>
