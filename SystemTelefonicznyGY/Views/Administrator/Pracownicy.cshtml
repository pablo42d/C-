@model List<SystemTelefonicznyGY.Models.Pracownik>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista Pracowników</h2>
        <a href="@Url.Action("Edytuj", "Administrator")" class="btn btn-success">
            <i class="fas fa-plus"></i> Dodaj Pracownika
        </a>
    </div>

    @if (TempData["Sukces"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Sukces"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Imię i Nazwisko</th>
                    <th>Stanowisko</th>
                    <th>Login</th>
                    <th>Rola</th>
                    <th class="text-center">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td><strong>@p.Imie @p.Nazwisko</strong></td>
                        <td>@p.Stanowisko</td>
                        <td><code>@p.Login</code></td>
                        <td>
                            <span class="badge @(p.Rola == "Admin" ? "bg-danger" : "bg-primary")">@p.Rola</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="@Url.Action("Edytuj", "Administrator", new { id = p.Id })" class="btn btn-sm btn-outline-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Usun", "Administrator", new { id = p.Id })" class="btn btn-sm btn-outline-danger" onclick="return confirm('Usunąć pracownika?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
