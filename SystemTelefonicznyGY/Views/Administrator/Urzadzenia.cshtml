@using System.Data
@model DataTable

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-mobile-alt"></i> Zarządzanie Urządzeniami Goodyear</h2>
        <a href="@Url.Action("EdytujUrzadzenie", "Administrator")" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Dodaj Nowe Urządzenie
        </a>
    </div>

    @* Ujednolicony formularz wyszukiwania *@
    <form method="get" class="row g-3 my-4 p-3 bg-light rounded shadow-sm">
        <div class="col-md-10">
            <input type="text" name="szukanaFraza" value="@ViewBag.OstatniaFraza"
                   class="form-control" placeholder="Szukaj IMEI, modelu, numeru inwentarzowego lub nazwiska pracownika..." />
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">Filtruj</button>
        </div>
    </form>

    <div class="table-responsive shadow">
        <table class="table table-bordered table-hover bg-white mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Model / Producent</th>
                    <th>IMEI / MAC</th>
                    <th>Nr Inwentarzowy</th>
                    <th>Status</th>
                    <th>Pracownik</th>
                    <th class="text-center" style="min-width: 180px;">Zarządzaj</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        <td class="align-middle"><strong>@row["Aparat"] @row["Model"]</strong></td>
                        <td class="align-middle"><code>@row["IMEI_MAC"]</code></td>
                        <td class="align-middle text-center">
                            <span class="badge bg-light text-dark border">@row["NrInwentarzowy"]</span>
                        </td>
                        <td class="align-middle text-center">
                            @{
                                var status = row["Status"].ToString();
                                var badgeClass = status == "W użyciu" ? "bg-success" :
                                                 status == "Magazyn" ? "bg-warning text-dark" :
                                                 status == "Naprawa" ? "bg-info text-dark" : "bg-danger";
                            }
                            <span class="badge @badgeClass" style="font-size: 0.9em;">@status</span>
                        </td>
                        <td class="align-middle">@(row["PrzypisanyPracownik"] != DBNull.Value ? row["PrzypisanyPracownik"] : "---")</td>
                        <td class="text-center align-middle">
                            @* Zmniejszone i ujednolicone przyciski akcji *@
                            <div class="btn-group">
                                <a href="@Url.Action("EdytujUrzadzenie", "Administrator", new { id = row["ID"] })"
                                   class="btn btn-warning btn-sm py-1 px-2" title="Edytuj dane">
                                    <i class="fas fa-edit"></i> Edytuj
                                </a>
                                <a href="@Url.Action("WycofajUrzadzenie", "Administrator", new { id = row["ID"] })"
                                   class="btn btn-danger btn-sm py-1 px-2"
                                   onclick="return confirm('Czy na pewno wycofać to urządzenie?')">
                                    <i class="fas fa-power-off"></i> Wycofaj
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
