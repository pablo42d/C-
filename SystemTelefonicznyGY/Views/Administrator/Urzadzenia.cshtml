@using System.Data
@model DataTable

<div class="container mt-4">
    <h2><i class="fas fa-mobile-alt"></i> Zarządzanie Urządzeniami Goodyear</h2>

    <form method="get" class="row g-3 my-3">
        <div class="col-auto">
            <input type="text" name="szukanaFraza" class="form-control" placeholder="Szukaj IMEI, Model, Nazwisko...">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filtruj</button>
            <a href="@Url.Action("EdytujUrzadzenie", "Administrator")" class="btn btn-success">Dodaj Nowe</a>
        </div>
    </form>

    <table class="table table-striped table-hover shadow-sm bg-white">
        <thead class="table-dark">
            <tr>
                <th>Model</th>
                <th>IMEI / MAC</th>
                <th>Nr Inwentarzowy</th>
                <th>Status</th>
                <th>Pracownik</th>
                <th class="text-center">Zarządzaj</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td><strong>@row["Aparat"] @row["Model"]</strong></td>
                    <td>@row["IMEI_MAC"]</td>
                    <td><span class="badge bg-light text-dark">@row["NrInwentarzowy"]</span></td>
                    <td>
                        <span class="badge @(row["Status"].ToString() == "W użyciu" ? "bg-success" : "bg-warning")">
                            @row["Status"]
                        </span>
                    </td>
                    <td>@(row["PrzypisanyPracownik"] != DBNull.Value ? row["PrzypisanyPracownik"] : "---")</td>
                    <td class="text-center">
                        <a href="@Url.Action("EdytujUrzadzenie", "Administrator", new { id = row["ID"] })" class="btn btn-sm btn-warning">Edytuj</a>
                        <a href="@Url.Action("WycofajUrzadzenie", "Administrator", new { id = row["ID"] })" class="btn btn-sm btn-danger" onclick="return confirm('Wycofać to urządzenie?')">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
